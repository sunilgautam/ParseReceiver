<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/CommonLayout"
        tools:context="app.receiver.parse.parsereceiver.HomeFragment">

    <ListView
        android:id="@+id/appDataList"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="#ffffff" >
    </ListView>

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="@string/no_data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">

        <Button
            android:id="@+id/btnReloadData"
            style="@style/Button"
            android:layout_width="match_parent"
            android:text="Reload Data"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnReloadConfig"
            style="@style/Button"
            android:layout_width="match_parent"
            android:text="@string/reload_config"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
